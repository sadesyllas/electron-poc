{
  "name": "electron-poc",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "lint": "npx eslint --fix src/**",
    "build": "tsc && copyfiles -f src/index.html build",
    "lint:build": "tsc && copyfiles -f src/index.html build",
    "start": "electron build",
    "build:start": "npm run lint:build && npm start --",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package:linux": "npm run lint:build && cd build && npm run make -- --platform linux",
    "package:win32": "npm run lint:build && cd build && npm run make -- --platform win32"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "copyfiles": "^2.4.1",
    "electron": "^21.1.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-html-parser": "^6.8.2",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "2.7.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "yargs": "^17.6.0"
  }
